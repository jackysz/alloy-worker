{
    "name": "alloy-worker",
    "version": "0.1.0",
    "description": "面向事务的高可用 Web Worker 通信框架",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "one": "node ./src/worker/script/index.js",
        "dev": "cross-env NODE_ENV=development node ./script/build.js",
        "dist": "cross-env NODE_ENV=production node ./script/build.js",
        "dev:worker": "cross-env NODE_ENV=development node ./worker-script/build-worker.js",
        "dist:worker": "cross-env NODE_ENV=production node ./worker-script/build-worker.js",
        "ts-check": "tsc --noEmit",
        "commit": "git-cz",
        "prettier": "prettier --write 'src/**/*.{js}'",
        "eslint": "eslint 'src/**/*.{js,ts}'"
    },
    "keywords": [
        "Web",
        "Worker",
        "Channel",
        "Message"
    ],
    "author": "CntChen",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "^7.9.0",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "babel-loader": "^8.1.0",
        "commitizen": "^4.0.3",
        "cross-env": "^7.0.2",
        "cz-conventional-changelog": "^3.1.0",
        "eslint": "^6.8.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.9",
        "prettier": "^2.0.2",
        "ts-loader": "^6.2.1",
        "typescript": "^3.8.3",
        "webpack": "^4.42.0",
        "webpack-manifest-plugin": "^2.2.0"
    },
    "dependencies": {
        "core-js": "^3.6.4",
        "regenerator-runtime": "^0.13.5"
    },
    "lint-staged": {
        "src/**/*.{js,ts}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npm run ts-check && lint-staged"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
